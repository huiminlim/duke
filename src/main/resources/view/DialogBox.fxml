         </HBox.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="3.0" />
         </padding></Label>
   </children>
   <padding>
      <Insets bottom="15.0" left="5.0" right="10.0" top="5.0" />
   </padding>
</fx:root>
